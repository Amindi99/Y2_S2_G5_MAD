<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_profile">

    <!--***************************************USER PROFILE ******************************-->

    <?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grayLight"
        android:orientation="vertical"
        android:textAlignment="center"
        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="225dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="229dp"
                android:background="#2196F3"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent">

                </FrameLayout>

                <FrameLayout
                    android:layout_width="229dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="318dp"
                            android:layout_height="167dp">

                            <ImageView
                                android:layout_width="164dp"

                                android:layout_height="132dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginRight="35dp"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/user" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="0dp"
                            android:text="@string/Auser_name"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="30sp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="38dp"
                    android:layout_height="match_parent">

                </FrameLayout>

            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:background="#6C1F1F">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="52dp"
                        android:layout_height="match_parent">

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="107dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="132dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:autoText="false"
                                android:text="@string/Afriends"
                                android:textAlignment="center"
                                android:textColor="#FFFDFD"
                                android:textSize="24sp" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/textView17"
                                    android:layout_width="141dp"
                                    android:layout_height="44dp"
                                    android:text="21"
                                    android:textAlignment="center"
                                    android:textColor="#FBFAFA"
                                    android:textSize="24sp"
                                    android:textStyle="bold" />
                            </FrameLayout>
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/Arecipies"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textSize="24sp" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView18"
                                    android:layout_width="257dp"
                                    android:layout_height="match_parent"
                                    android:text="25"
                                    android:textAlignment="center"
                                    android:textColor="#FFFFFF"
                                    android:textSize="24sp"
                                    android:textStyle="bold" />

                            </FrameLayout>
                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>
            </FrameLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="326dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/editTextTextPersonName2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimaryDark"
                    android:ems="10"
                    android:paddingTop="15dp"
                    android:inputType="textPersonName"
                    android:text="@string/Abio"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="#F3DDDD"
                    android:text="@string/Aflavour"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="223dp"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="412dp"
                    android:layout_height="169dp"
                    android:layout_gravity="start|right|fill"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="5dp"
                    android:background="#F3DDDD"
                    app:srcCompat="@drawable/pizza" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="412dp"
                android:layout_height="113dp"
                android:layout_marginTop="220dp"
                android:layout_marginRight="25dp"
                android:background="#F3DDDD"
                android:text="@string/Adescription"
                android:textAlignment="center"
                android:textColor="?android:attr/colorForeground"
                android:textSize="16sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:background="#F3DDDD">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="20dp"
                android:text="@string/Amore"
                android:textAllCaps="false"
                android:textColor="@color/abc"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="60dp"
                android:background="@android:color/holo_green_dark"
                android:text="@string/Acookit"
                android:textColor="@color/grayLight"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button2"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="60dp"
                android:background="@android:color/holo_green_dark"
                android:text="@string/Aedit"
                android:textColor="@color/grayLight"
                android:textStyle="bold" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>