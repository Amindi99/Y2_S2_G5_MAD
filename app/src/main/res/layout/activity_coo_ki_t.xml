<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#061D9F"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="417dp"
        android:layout_height="69dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="342dp"
            android:layout_height="57dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Search..."
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="63dp"
            android:layout_height="57dp"
            app:srcCompat="@android:drawable/ic_search_category_default" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="415dp"
        android:layout_height="669dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="58dp"
        tools:ignore="MissingConstraints">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="492dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    app:srcCompat="@drawable/pasta"
                    tools:ignore="VectorDrawableCompat" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#03BCF4"
                    android:text="@string/butn1" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/editTextTextPersonName4"
                            android:layout_width="match_parent"
                            android:layout_height="62dp"
                            android:ems="10"
                            android:hint="Title"
                            android:inputType="textPersonName" />

                        <EditText
                            android:id="@+id/editTextTextMultiLine"
                            android:layout_width="match_parent"
                            android:layout_height="260dp"
                            android:background="@android:color/darker_gray"
                            android:ems="10"
                            android:gravity="start|top"
                            android:hint="Description"
                            android:inputType="textMultiLine" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="67dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimaryDark"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/button5"
                                    android:layout_width="230dp"
                                    android:layout_height="wrap_content"
                                    android:background="#FF9800"
                                    android:text="@string/butn1"
                                    android:textColor="#FFFCFC" />

                                <Button
                                    android:id="@+id/button6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#E91E63"
                                    android:text="@string/butn2"
                                    android:textColor="#FFFFFF" />
                            </LinearLayout>
                        </FrameLayout>

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="88dp"
        tools:ignore="MissingClass,MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="499dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="686dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="50dp"
        tools:ignore="MissingConstraints">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="#061D9F">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="414dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:background="#EEF8F8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="129dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="match_parent"
                                android:layout_height="88dp"
                                app:srcCompat="@drawable/user3" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="65dp">

                                    <TextView
                                        android:id="@+id/textView"
                                        android:layout_width="282dp"
                                        android:layout_height="50dp"
                                        android:background="#ACA5A5"
                                        android:text="@string/userName"
                                        android:textColor="#000000"
                                        android:textSize="24sp" />

                                </FrameLayout>

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#ACA5A5"
                                    android:text="@string/time" />

                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="420dp"
                        android:layout_height="50dp"
                        android:background="#CC3A6C"
                        android:text="Pasta"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="265dp"
                    android:background="#ECF7FF">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="182dp"
                        android:layout_height="143dp"
                        app:srcCompat="@drawable/pasta" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:layout_marginLeft="200dp"
                        app:srcCompat="@drawable/pasta1" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="405dp"
                        android:layout_height="107dp"
                        android:layout_marginTop="150dp"
                        android:text="TextViewMelt butter and oil in a large skillet over medium high heat; add garlic and cook 1 minute until fragrant. Add carrots and toss 2 minutes until well coated. Drizzle with honey and orange juice, add half of the orange zest and cook 4-5 more minutes. Season with salt and pepper to taste." />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:background="#2196F3">

                </FrameLayout>

            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#061D9F"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="3dp"
                android:layout_height="match_parent">

            </FrameLayout>

            <Button
                android:id="@+id/button3"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:background="#2196F3"
                android:text="Cook it"
                android:textColor="#FFFFFF" />

            <FrameLayout
                android:layout_width="14dp"
                android:layout_height="match_parent">

            </FrameLayout>

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E91E63"
                android:text="Comment"
                android:textColor="#FFFFFF"
                tools:ignore="DuplicateIds" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>